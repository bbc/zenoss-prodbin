# check if central_query and metric_consumer are both accessible
#
is_ready()
{
    status_url=$1
    timeout 3 curl -w %{http_code} -s -XHEAD ${status_url}
}

central_query_ready=$(is_ready http://localhost:8080/ping/status/performance)
metric_consumer_ready=$(is_ready http://localhost:8080/ping/status/metrics)

if [ "$metric_consumer_ready" != "200" ] || [ "$central_query_ready" != "200" ] 
then
    exit 1
fi

exit 0
